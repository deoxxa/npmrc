    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\npmrc.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run test (current)",
            "program": "${workspaceFolder}/node_modules/tape/bin/tape",
            "args": [   
                "${workspaceFolder}/${relativeFile}"
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        }
    ]
}